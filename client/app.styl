html
  width 100%
  height 100%
body
  margin 0
  width 100%
  height 100%
  background url('/img/orangeBack.png');
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  font-family Roboto, sans-serif;

.masterContainer
  width:100%
  min-height 900px
  height auto
  display flex
  flex-grow 1
  flex-direction column
  position relative

.generalSection
  display flex
  flex-direction column
  flex-grow 2

.centeredContent
  width 100%
  min-height 630px
  height 100%
  display flex
  justify-content center
  align-items center
  .loginDiv
    width 40%;
    min-height 200px
    margin auto
    background-color white
    display flex
    flex-direction column
    justify-content center
    align-items center
    .loginformCont
      display flex
      flex-direction column
      .loginBtnDiv
        display flex
        justify-content center
        padding 10px

.cardMenu
  width 100%
  display flex
  justify-content center
  .cardContainer
    width 250px
    height 150px
    margin-left 4%
    margin-right 4%
    .cards
      width 100%
      height 100%
      transition all .2s ease-in-out
      &:hover
        cursor pointer
        transform scale(1.1)
      .cardsHeader div
        padding-right 0px !important
        width 100%
        text-align center

.errorMsg
  color red

footer
  text-align center
  color white

.centeredContentSingle
  width 100%
  min-height 600px
  flex-grow 1
  height 100%
  display flex
  flex-direction column
  
  .contentWrapper
    min-width 960px
    width 90%
    margin auto
    min-height 600px
    padding-left 10px
    padding-right 10px
    height auto
    position relative
    background-color white
    flex-grow 1
    .optionTabs
      position absolute
      bottom 0
      width 100%

.inAppBtnDiv
  display flex
  justify-content flex-end
  margin-top 6%

.topaligned
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  flex-wrap wrap